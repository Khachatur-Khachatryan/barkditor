<style-scheme id="darcula" _name="Darcula" version="1.0">
  <author>Khachatur Khachatryan</author>
  <_description>JetBrains Darcula theme for GTK Source View</_description>

  <!-- Named Colors -->

  <!-- Global Styles -->
  <style name="bracket-match"           background="#3B514D" foreground="#FFEF28" bold="true"/>
  <style name="current-line"            background="#323232"/>
  <style name="current-line-number"     background="#323232" foreground="#A4A3A3" bold="true"/>
  <style name="cursor"                  foreground="#FFFFFF"/>
  <style name="line-numbers"            background="#313335" foreground="#606366"/>
  <style name="map-overlay"             background="#A9B7C6"/>
  <style name="right-margin"            background="#313335" foreground="#FFFFFF"/>
  <style name="search-match"            background="#2EC27E"/>
  <style name="selection"               background="#214283"/>
  <style name="selection-unfocused"     background="#214283"/>
  <style name="snippet-focus"           background="#FF7800"/>
  <style name="text"                    background="#2B2B2B" foreground="#A9B7C6"/>

  <!-- Defaults -->
  <style name="def:base-n-integer"      foreground="#6897BB" bold="false"/>
  <style name="def:boolean"             foreground="#CC7832"/>
  <style name="def:character"           foreground="#6A8759"/>
  <style name="def:comment"             foreground="#7E7B77"/>
  <style name="def:complex"             foreground="#57E389"/>
  <style name="def:constant"            foreground="#6897BB"/>
  <style name="def:decimal"             foreground="#6897BB"/>
  <style name="def:doc-comment"         foreground="#6A8759"/>
  <style name="def:doc-comment-element" foreground="#6A8759"/>
  <style name="def:error"               foreground="#B03D39"/>
  <style name="def:floating-point"      foreground="#6897BB"/>
  <style name="def:function"            foreground="#FFC25C" italic="true" scale="1"/>
  <style name="def:heading"             foreground="#E5A74E"/>
  <style name="def:heading0"            foreground="#E5A74E"/>
  <style name="def:heading1"            foreground="#E5A74E"/>
  <style name="def:heading2"            foreground="#E5A74E"/>
  <style name="def:heading3"            foreground="#E5A74E"/>
  <style name="def:heading4"            foreground="#E5A74E"/>
  <style name="def:heading5"            foreground="#E5A74E"/>
  <style name="def:heading6"            foreground="#E5A74E"/>
  <style name="def:identifier"          foreground="#9876AA"/>
  <style name="def:inline-code"         background="#364135"/>
  <style name="def:keyword"             foreground="#CC7832"/>
  <style name="def:net-address"         foreground="#6A8759" underline="single"/>
  <style name="def:note"                foreground="#A8C023" bold="true" italic="true" scale="1"/>
  <style name="def:number"              foreground="#6897BB"/>
  <style name="def:preprocessor"        foreground="#CC7832"/>
  <style name="def:shebang"             foreground="#A8C023" bold="true"/>
  <style name="def:special-char"        foreground="#CC7832"/>
  <style name="def:special-constant"    foreground="#CC7832"/>
  <style name="def:string"              foreground="#6A8759"/>
  <style name="def:type"                foreground="#CC7832"/>
  <style name="def:warning"             background="#52503A"/>

</style-scheme>